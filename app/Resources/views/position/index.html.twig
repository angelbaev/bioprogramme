{% extends 'base.html.twig' %}

{% block body %}
    <h1>Positions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Isactive</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Createdby</th>
                <th>Updatedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for position in positions %}
            <tr>
                <td><a href="{{ path('account_position_show', { 'id': position.id }) }}">{{ position.id }}</a></td>
                <td>{{ position.name }}</td>
                <td>{{ position.description }}</td>
                <td>{% if position.isActive %}Yes{% else %}No{% endif %}</td>
                <td>{% if position.createdAt %}{{ position.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if position.updatedAt %}{{ position.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ position.createdBy }}</td>
                <td>{{ position.updatedBy }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('account_position_show', { 'id': position.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('account_position_edit', { 'id': position.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('account_position_new') }}">Create a new position</a>
        </li>
    </ul>
{% endblock %}
