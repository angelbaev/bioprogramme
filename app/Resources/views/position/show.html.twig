{% extends 'base.html.twig' %}

{% block body %}
    <h1>Position</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ position.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ position.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ position.description }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if position.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if position.createdAt %}{{ position.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if position.updatedAt %}{{ position.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ position.createdBy }}</td>
            </tr>
            <tr>
                <th>Updatedby</th>
                <td>{{ position.updatedBy }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('account_position_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('account_position_edit', { 'id': position.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
