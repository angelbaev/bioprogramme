{% extends 'base.html.twig' %}

{% block body %}
    <h1>Machineorder</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ machineOrder.id }}</td>
            </tr>
            <tr>
                <th>Serialnumber</th>
                <td>{{ machineOrder.serialNumber }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if machineOrder.createdAt %}{{ machineOrder.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if machineOrder.updatedAt %}{{ machineOrder.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('machineorder_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('machineorder_edit', { 'id': machineOrder.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
