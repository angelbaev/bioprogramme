{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{% trans %}Permission{% endtrans %}</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="btn-group">
                        <a class="btn btn-default" href="{{ path('account_permission_index') }}"><i class="fa fa-list"></i></a>
                        <a class="btn btn-default" href="{{ path('account_permission_edit', { 'id': permission.id }) }}"><i class="fa fa-pencil"></i></a>
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-default"><i class="fa fa-trash"></i></button>
                        {{ form_end(delete_form) }}
                    </div>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ permission.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ permission.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Value{% endtrans %}</th>
                <td>{{ permission.value }}</td>
            </tr>
        </tbody>
    </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
