{% extends 'base.html.twig' %}

{% block body %}
    <h1></h1>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{% trans %}Position{% endtrans %}</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="btn-group">
                        <a class="btn btn-default" href="{{ path('account_position_index') }}"><i class="fa fa-list"></i></a>
                        <a class="btn btn-default" href="{{ path('account_position_edit', { 'id': position.id }) }}"><i class="fa fa-pencil"></i></a>
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-default"><i class="fa fa-trash"></i></button>
                        {{ form_end(delete_form) }}
                    </div>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ position.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ position.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ position.description }}</td>
            </tr>
            <tr>
                <th>{% trans %}Status{% endtrans %}</th>
                <td>{{ label(position.isActive) }}</td>
            </tr>
            <tr>
                <th>{% trans %}Createdat{% endtrans %}</th>
                <td>{% if position.createdAt %}{{ position.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{% trans %}Updatedat{% endtrans %}</th>
                <td>{% if position.updatedAt %}{{ position.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
