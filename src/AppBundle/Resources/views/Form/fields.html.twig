{% block image_widget %}
    {% spaceless %}
        <div class="image-widget">
            <a href="javascript:;" id="thumb-image" class="img-thumbnail">
                <img id="{{ get_attribute_id(block('widget_container_attributes')) }}" src="{{ image_resize(value, 100, 100) }}" width="100" height="100" alt="" title="" data-placeholder="" />
            </a>
            {{ block('hidden_widget') }}
            <div class="popover-content">
                <button type="button" id="button-image" class="btn btn-primary">
                    <i class="fa fa-pencil"></i>
                </button>
                <button type="button" id="button-clear" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                </button>
            </div>
        </div>
    {% endspaceless %}
{% endblock %}